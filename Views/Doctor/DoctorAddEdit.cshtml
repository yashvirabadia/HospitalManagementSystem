@model HospitalManagementSystem.Models.DoctorModel

<div class="col-lg-12">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-4">
            <h3 class="card-title mb-4 fw-semibold text-primary fs-3">
                @(Model?.DoctorID == null || Model?.DoctorID == 0 ? "🩺 Add Doctor" : "🩺 Save Doctor")
            </h3>

            <form asp-controller="Doctor"
                  asp-action="DoctorAddEdit"
                  method="post"
                  class="needs-validation"
                  novalidate>

                <input type="hidden" asp-for="DoctorID" />

                <!-- Name -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-medium">Name</label>
                    <input asp-for="Name" type="text" class="form-control rounded-pill shadow-sm" required />
                    <div class="invalid-feedback">Please enter name.</div>
                </div>

                <!-- Phone -->
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-medium">Phone</label>
                    <input asp-for="Phone" type="text" class="form-control rounded-pill shadow-sm" required />
                    <div class="invalid-feedback">Please enter phone number.</div>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-medium">Email</label>
                    <input asp-for="Email" type="email" class="form-control rounded-pill shadow-sm" required />
                    <div class="invalid-feedback">Please enter a valid email.</div>
                </div>

                <!-- Qualification -->
                <div class="mb-3">
                    <label asp-for="Qualification" class="form-label fw-medium">Qualification</label>
                    <input asp-for="Qualification" type="text" class="form-control rounded-pill shadow-sm" required />
                    <div class="invalid-feedback">Please enter qualification.</div>
                </div>

                <!-- Specialization -->
                <div class="mb-3">
                    <label asp-for="Specialization" class="form-label fw-medium">Specialization</label>
                    <input asp-for="Specialization" type="text" class="form-control rounded-pill shadow-sm" required />
                    <div class="invalid-feedback">Please enter specialization.</div>
                </div>

                <!-- Is Active -->
                <div class="mb-3">
                    <label class="form-label fw-medium d-block mb-1" for="IsActiveSwitch">Is Active</label>
                    <div class="form-check form-switch">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" checked />
                    </div>
                </div>


                <!-- Hidden Fields -->
                <input type="hidden" asp-for="Modified" />

                <div class="mb-3">
                    <label asp-for="UserID" class="form-label fw-medium">User ID</label>
                    <input asp-for="UserID" type="number" class="form-control rounded-pill shadow-sm" required />
                    <div class="invalid-feedback">Please enter user ID.</div>
                </div>

                <!-- Buttons -->
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill shadow">Save</button>
                    <a asp-controller="Doctor" asp-action="DoctorList" class="btn btn-outline-secondary px-4 py-2 rounded-pill ms-2">Back to list</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                const forms = document.getElementsByClassName('needs-validation');
                Array.prototype.forEach.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}