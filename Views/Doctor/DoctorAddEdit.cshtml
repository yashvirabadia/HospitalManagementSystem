@model HospitalManagementSystem.Models.DoctorModel

<div class="col-lg-12">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-4">
            <h3 class="card-title mb-4 fw-semibold text-primary">👨‍⚕️ Save Doctor</h3>

            <form class="row g-4" method="post" asp-controller="Doctor" asp-action="DoctorAddEdit">

                <input type="hidden" asp-for="DoctorID" />

                <!-- Doctor Name -->
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label fw-medium">Doctor Name</label>
                    <input asp-for="Name" class="form-control rounded-pill shadow-sm" placeholder="Enter name" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <!-- Email -->
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label fw-medium">Email</label>
                    <input asp-for="Email" class="form-control rounded-pill shadow-sm" type="email" placeholder="Enter email" required />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Phone -->
                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label fw-medium">Phone</label>
                    <input asp-for="Phone" class="form-control rounded-pill shadow-sm" placeholder="Enter phone number" required />
                    <span asp-validation-for="Phone" class="text-danger small"></span>
                </div>

                <!-- Qualification -->
                <div class="col-md-6">
                    <label asp-for="Qualification" class="form-label fw-medium">Qualification</label>
                    <input asp-for="Qualification" class="form-control rounded-pill shadow-sm" placeholder="Enter qualification" required />
                    <span asp-validation-for="Qualification" class="text-danger small"></span>
                </div>

                <!-- Specialization -->
                <div class="col-md-6">
                    <label asp-for="Specialization" class="form-label fw-medium">Specialization</label>
                    <input asp-for="Specialization" class="form-control rounded-pill shadow-sm" placeholder="Enter specialization" required />
                    <span asp-validation-for="Specialization" class="text-danger small"></span>
                </div>

                <!-- Is Active -->
                <div class="col-md-6 pt-4">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input shadow-sm" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label fw-medium">Is Active</label>
                    </div>
                    <span asp-validation-for="IsActive" class="text-danger small"></span>
                </div>

                <!-- User ID -->
                <div class="col-md-6">
                    <label asp-for="UserID" class="form-label fw-medium">User ID</label>
                    <input asp-for="UserID" class="form-control rounded-pill shadow-sm" type="number" placeholder="Enter User ID" required />
                    <span asp-validation-for="UserID" class="text-danger small"></span>
                </div>

                <!-- Hidden Modified -->
                <input type="hidden" asp-for="Modified" />

                <!-- Buttons -->
                <div class="col-12 text-center mt-3">
                    <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill shadow">Save</button>
                    <button type="reset" class="btn btn-outline-secondary px-4 py-2 rounded-pill ms-2">Reset</button>
                </div>

            </form>
        </div>
    </div>
</div>
