@model HospitalManagementSystem.Models.DepartmentModel

<div class="col-lg-12">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-4">
            <h3 class="card-title mb-4 fw-semibold text-primary fs-3">
                @(Model?.DepartmentID == null || Model?.DepartmentID == 0 ? "🏥 Add Department" : "🏥 Save Department")
            </h3>

            <form asp-controller="Department"
                  asp-action="DepartmentAddEdit"
                  method="post"
                  class="row g-3 needs-validation"
                  novalidate>

                <input type="hidden" asp-for="DepartmentID" />

                <!-- Department Name -->
                <div class="col-12">
                    <label asp-for="DepartmentName" class="form-label fw-medium">Department Name</label>
                    <input asp-for="DepartmentName"
                           type="text"
                           class="form-control rounded-pill shadow-sm"
                           placeholder="Enter Department Name"
                           required />
                    <div class="invalid-feedback">
                        Please enter department name.
                    </div>
                </div>

                <!-- Description -->
                <div class="col-12">
                    <label asp-for="Description" class="form-label fw-medium">Description</label>
                    <input asp-for="Description"
                           type="text"
                           class="form-control rounded-pill shadow-sm"
                           placeholder="Short description"
                           required />
                    <div class="invalid-feedback">
                        Please enter description.
                    </div>
                </div>

                <!-- Is Active -->
                <div class="mb-3">
                    <label class="form-label fw-medium d-block mb-1" for="IsActiveSwitch">Is Active</label>
                    <div class="form-check form-switch">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" checked />
                    </div>
                </div>

                <!-- Hidden fields -->
                <input type="hidden" asp-for="Created" />
                <input type="hidden" asp-for="Modified" />

                <div class="form-group">
                    <label asp-for="UserID" class="control-label"></label>
                    <select asp-for="UserID" class="form-control"
                            asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                        <option value="">-- Select User --</option>
                    </select>
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>




                <!-- Buttons -->
                <div class="col-12 text-center mt-3">
                    <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill shadow">Save</button>
                    <a asp-controller="Department" asp-action="DepartmentList" class="btn btn-outline-secondary px-4 py-2 rounded-pill ms-2">Back to list</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                const forms = document.getElementsByClassName('needs-validation');
                Array.prototype.forEach.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}




