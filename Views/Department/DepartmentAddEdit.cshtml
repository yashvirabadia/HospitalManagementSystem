@model HospitalManagementSystem.Models.DepartmentModel

<div class="col-lg-12">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-4">
            <h3 class="card-title mb-4 fw-semibold text-primary fs-3">🏥 Save Department</h3>

            <form asp-controller="Department"
                  asp-action="DepartmentAddEdit"
                  method="post"
                  class="row g-3 needs-validation"
                  novalidate>

                <input type="hidden" asp-for="DepartmentID" />

                <!-- Department Name -->
                <div class="col-12">
                    <label asp-for="DepartmentName" class="form-label fw-medium">Department Name</label>
                    <input asp-for="DepartmentName"
                           type="text"
                           class="form-control rounded-pill shadow-sm"
                           placeholder="Enter Department Name"
                           required />
                    <div class="invalid-feedback">
                        Please enter department name.
                    </div>
                </div>

                <!-- Description -->
                <div class="col-12">
                    <label asp-for="Description" class="form-label fw-medium">Description</label>
                    <input asp-for="Description"
                           type="text"
                           class="form-control rounded-pill shadow-sm"
                           placeholder="Short description (optional)"
                           required />
                    <div class="invalid-feedback">
                        Please enter description.
                    </div>
                </div>

                <!-- Is Active -->
                <div class="col-12">
                    <div class="form-check form-switch mt-2">
                        <label class="form-check-label fw-medium" for="IsActiveSwitch">Is Active</label>
                        <input asp-for="IsActive"
                               class="form-check-input"
                               type="checkbox"
                               role="switch"
                               id="IsActiveSwitch" />
                    </div>
                </div>

                <!-- Hidden fields -->
                <input type="hidden" asp-for="Created" />
                <input type="hidden" asp-for="Modified" />

                <!-- User ID -->
                <div class="col-12">
                    <label asp-for="UserID" class="form-label fw-medium">User ID</label>
                    <input asp-for="UserID"
                           type="number"
                           class="form-control rounded-pill shadow-sm"
                           required />
                    <div class="invalid-feedback">
                        Please enter a valid User ID.
                    </div>
                </div>

                <!-- Buttons -->
                <div class="col-12 text-center mt-3">
                    <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill shadow">Save</button>
                    <button type="reset" class="btn btn-outline-secondary px-4 py-2 rounded-pill ms-2">Reset</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            'use strict';

            const forms = document.querySelectorAll('.needs-validation');

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    const inputs = form.querySelectorAll('input, textarea, select');

                    // Check validity manually and add only 'is-invalid' where needed
                    inputs.forEach(input => {
                        input.classList.remove('is-valid', 'is-invalid');

                        if (!input.checkValidity()) {
                            input.classList.add('is-invalid');
                        }
                    });

                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                }, false);
            });
        })();
    </script>
}




