@model DataTable
@using System.Data

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4 fw-semibold text-primary">User List</h5>


                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Responsive Table Wrapper -->
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">UserID</th>
                                    <th scope="col">UserName</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">MobileNo</th>
                                    <th scope="col">IsActive</th>
                                    <th scope="col">Created</th>
                                    <th scope="col">Modified</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow row in Model.Rows)
                                {
                                    <tr>
                                        <th>@row["UserID"]</th>
                                        <td>@row["UserName"]</td>
                                        <td>@row["Email"]</td>
                                        <td>@row["MobileNo"]</td>
                                        <td>@row["IsActive"]</td>
                                        <td>@row["Created"]</td>
                                        <td>@row["Modified"]</td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a class="btn btn-outline-success btn-xs" asp-controller="User" asp-action="UserFormFill" asp-route-ID="@row["UserID"]">
                                                    <i class="bi bi-pencil-fill"></i>
                                                </a>

                                                <a asp-controller="User" asp-action="UserDelete" asp-route-UserID="@row["UserID"]" class="btn btn-outline-danger btn-xs">
                                                    <i class="bi bi-x"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- End Responsive Table Wrapper -->

                </div>
            </div>

        </div>
    </div>
</section>
