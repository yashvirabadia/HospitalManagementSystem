@model DataTable
@using System.Data

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4 fw-semibold text-primary fs-3">User List</h5>

                    <!-- Buttons Section -->
                    <div class="d-flex justify-content-between align-items-center mb-4">

                        <!-- Left Side: Action Buttons -->
                        <div class="d-flex">
                            <!-- Export to Excel -->
                            <a class="btn btn-outline-success d-flex align-items-center gap-2 shadow-sm px-3 me-2"
                               asp-controller="User" asp-action="ExportToExcel"
                               data-bs-toggle="tooltip" data-bs-placement="top" title="Export to Excel">
                                <i class="bi bi-file-earmark-excel-fill fs-5"></i>
                            </a>

                            <!-- Export to CSV -->
                            <a class="btn btn-outline-primary d-flex align-items-center gap-2 shadow-sm px-3"
                               asp-controller="User" asp-action="ExportToCsv"
                               data-bs-toggle="tooltip" data-bs-placement="top" title="Download CSV">
                                <i class="bi bi-filetype-csv fs-5"></i>
                            </a>
                        </div>

                        <script>
                            // Enable Bootstrap tooltips
                            document.addEventListener("DOMContentLoaded", function () {
                                var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                                tooltipTriggerList.map(function (tooltipTriggerEl) {
                                    return new bootstrap.Tooltip(tooltipTriggerEl, {
                                        template: '<div class="tooltip custom-tooltip" role="tooltip"><div class="tooltip-arrow"></div><div class="tooltip-inner"></div></div>'
                                    });
                                });
                            });
                        </script>

                        <style>
                            /* Slim, stylish tooltip */
                            .custom-tooltip .tooltip-inner {
                                background-color: #333; /* dark background */
                                color: #fff; /* white text */
                                font-size: 0.75rem; /* smaller text */
                                padding: 0.25rem 0.5rem; /* tighter padding */
                                border-radius: 0.25rem; /* slightly rounded corners */
                                white-space: nowrap; /* keep text on one line */
                            }

                            .custom-tooltip .tooltip-arrow::before {
                                border-top-color: #333; /* match tooltip background */
                            }
                        </style>




                        <!-- Right Side: Search -->
                        <form asp-controller="User" asp-action="UserList" method="get"
                              class="d-flex align-items-center gap-2 shadow-sm p-2 rounded bg-light w-50">

                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input type="text" name="name" value="@Context.Request.Query["name"]"
                                       class="form-control" placeholder="Name">
                            </div>

                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input type="text" name="email" value="@Context.Request.Query["email"]"
                                       class="form-control" placeholder="Email">
                            </div>

                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-telephone"></i>
                                </span>
                                <input type="text" name="mobileNo" value="@Context.Request.Query["mobileNo"]"
                                       class="form-control" placeholder="Mobile No">
                            </div>

                            <button type="submit" class="btn btn-outline-primary d-flex align-items-center gap-1">
                                <i class="bi bi-search"></i>
                                <span>Search</span>
                            </button>
                        </form>


                    </div>



                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Responsive Table Wrapper -->
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    
                                    @* <th scope="col">UserID</th> *@
                                    <th scope="col">Action</th>
                                    <th scope="col">UserName</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">MobileNo</th>
                                    <th scope="col">IsActive</th>
                                    <th scope="col">Created</th>
                                    <th scope="col">Modified</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow row in Model.Rows)
                                {
                                    <tr>
                                        
                                        @* <th>@row["UserID"]</th> *@
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a class="btn btn-outline-success btn-xs" asp-controller="User" asp-action="UserFormFill" asp-route-ID="@row["UserID"]">
                                                    <i class="bi bi-pencil-fill"></i>
                                                </a>

                                                <a asp-controller="User" asp-action="UserDelete" asp-route-UserID="@row["UserID"]" class="btn btn-outline-danger btn-xs">
                                                    <i class="bi bi-x"></i>
                                                </a>
                                            </div>
                                        </td>
                                        <td>@row["UserName"]</td>
                                        <td>@row["Email"]</td>
                                        <td>@row["MobileNo"]</td>
                                        <td>@row["IsActive"]</td>
                                        <td>@Convert.ToDateTime(row["Created"]).ToString("dd-MM-yyyy")</td>
                                        <td>@Convert.ToDateTime(row["Modified"]).ToString("dd-MM-yyyy")</td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- End Responsive Table Wrapper -->

                </div>
            </div>

        </div>
    </div>
</section>
