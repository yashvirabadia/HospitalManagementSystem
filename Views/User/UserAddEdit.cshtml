@model HospitalManagementSystem.Models.UserModel

<div class="col-lg-12">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-4">
            <h3 class="card-title mb-4 fw-semibold text-primary fs-3">👤 User Form</h3>

            <form asp-action="UserAddEdit" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="UserID" />

                <!-- User Name -->
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label fw-medium">User Name</label>
                    <input asp-for="UserName" type="text" class="form-control rounded-pill shadow-sm" placeholder="Enter User Name" required />
                    @* <span asp-validation-for="UserName" class="text-danger small"></span> *@
                    <div class="invalid-feedback">Please enter a user name.</div>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-medium">Password</label>
                    <input asp-for="Password" type="password" class="form-control rounded-pill shadow-sm" placeholder="Enter Password" required />
                    @* <span asp-validation-for="Password" class="text-danger small"></span> *@
                    <div class="invalid-feedback">Please enter a password.</div>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-medium">Email</label>
                    <input asp-for="Email" type="email" class="form-control rounded-pill shadow-sm" placeholder="Enter Email" required />
                    @* <span asp-validation-for="Email" class="text-danger small"></span> *@
                    <div class="invalid-feedback">Please enter a valid email.</div>
                </div>

                <!-- Mobile No -->
                <div class="mb-3">
                    <label asp-for="MobileNo" class="form-label fw-medium">Mobile No</label>
                    <input asp-for="MobileNo" type="text" class="form-control rounded-pill shadow-sm" placeholder="Enter Mobile Number" required pattern="[0-9]{10}" />
                    @* <span asp-validation-for="MobileNo" class="text-danger small"></span> *@
                    <div class="invalid-feedback">Please enter a valid 10-digit mobile number.</div>
                </div>

                <!-- IsActive -->
                <div class="mb-3 form-check form-switch">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" id="IsActiveSwitch" />
                    <label class="form-check-label fw-medium" for="IsActiveSwitch">Is Active</label>
                    <span asp-validation-for="IsActive" class="text-danger small d-block"></span>
                </div>

                <!-- Hidden Modified -->
                
                
                <input type="hidden" name="Modified"  />

                <!-- Buttons -->
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill shadow">Save</button>
                    <button type="reset" class="btn btn-outline-secondary px-4 py-2 rounded-pill ms-2">Reset</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                const forms = document.getElementsByClassName('needs-validation');
                Array.prototype.forEach.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
