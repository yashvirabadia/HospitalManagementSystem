@model HospitalManagementSystem.Models.AppointmentModel

<div class="col-lg-8 offset-lg-2">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-4">
            <h3 class="card-title mb-4 fw-semibold text-primary fs-3">📅 Appointment Form</h3>

            <form asp-controller="Appointment" asp-action="AppointmentAddEdit" method="post" class="needs-validation" novalidate>

                <input type="hidden" asp-for="AppointmentID" />

                <!-- Doctor ID -->
                <div class="mb-3">
                    <label asp-for="DoctorID" class="form-label fw-medium">Doctor ID</label>
                    <input asp-for="DoctorID" type="number" class="form-control rounded-pill shadow-sm" placeholder="Enter Doctor ID" required />
                    <div class="invalid-feedback">Please enter Doctor ID.</div>
                    <span asp-validation-for="DoctorID" class="text-danger small"></span>
                </div>

                <!-- Patient ID -->
                <div class="mb-3">
                    <label asp-for="PatientID" class="form-label fw-medium">Patient ID</label>
                    <input asp-for="PatientID" type="number" class="form-control rounded-pill shadow-sm" placeholder="Enter Patient ID" required />
                    <div class="invalid-feedback">Please enter Patient ID.</div>
                    <span asp-validation-for="PatientID" class="text-danger small"></span>
                </div>

                <!-- Appointment Date -->
                <div class="mb-3">
                    <label asp-for="AppointmentDate" class="form-label fw-medium">Appointment Date</label>
                    <input asp-for="AppointmentDate" type="datetime-local" class="form-control rounded-pill shadow-sm" required />
                    <div class="invalid-feedback">Please select a date.</div>
                    <span asp-validation-for="AppointmentDate" class="text-danger small"></span>
                </div>

                <!-- Appointment Status -->
                <div class="mb-3">
                    <label asp-for="AppointmentStatus" class="form-label fw-medium">Appointment Status</label>
                    <select asp-for="AppointmentStatus" class="form-select rounded-pill shadow-sm" required>
                        <option value="">-- Select Status --</option>
                        <option>Scheduled</option>
                        <option>Completed</option>
                        <option>Cancelled</option>
                    </select>
                    <div class="invalid-feedback">Please select a status.</div>
                    <span asp-validation-for="AppointmentStatus" class="text-danger small"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-medium">Description</label>
                    <textarea asp-for="Description" class="form-control rounded-3 shadow-sm" rows="2" placeholder="Describe the purpose"></textarea>
                    <div class="invalid-feedback">Please add description.</div>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <!-- Special Remarks -->
                <div class="mb-3">
                    <label asp-for="SpecialRemarks" class="form-label fw-medium">Special Remarks</label>
                    <textarea asp-for="SpecialRemarks" class="form-control rounded-3 shadow-sm" rows="2" placeholder="Any special instructions"></textarea>
                    <div class="invalid-feedback">Please add special remarks.</div>
                    <span asp-validation-for="SpecialRemarks" class="text-danger small"></span>
                </div>

                <!-- Total Consulted Amount -->
                <div class="mb-3">
                    <label asp-for="TotalConsultedAmount" class="form-label fw-medium">Total Consulted Amount (₹)</label>
                    <input asp-for="TotalConsultedAmount" type="number" step="0.01" class="form-control rounded-pill shadow-sm" placeholder="e.g., 500.00" required />
                    <div class="invalid-feedback">Please enter amount.</div>
                    <span asp-validation-for="TotalConsultedAmount" class="text-danger small"></span>
                </div>

                @Html.HiddenFor(model => model.Modified)
                @Html.HiddenFor(model => model.Created)


                <!-- User ID -->
                <div class="mb-3">
                    <label asp-for="UserID" class="form-label fw-medium">User ID</label>
                    <input asp-for="UserID" type="number" class="form-control rounded-pill shadow-sm" placeholder="Enter User ID" required />
                    <div class="invalid-feedback">Please enter User ID.</div>
                    <span asp-validation-for="UserID" class="text-danger small"></span>
                </div>

                <!-- Submit & Reset -->
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill shadow">Save</button>
                    <button type="reset" class="btn btn-outline-secondary px-4 py-2 rounded-pill ms-2">Reset</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            // Disable green border for valid fields (optional neutral look)
            const style = document.createElement('style');
            style.innerHTML = `
                .was-validated .form-control:valid,
                .was-validated .form-select:valid {
                    border-color: #ced4da !important;
                    background-image: none !important;
                    box-shadow: none !important;
                }
            `;
            document.head.appendChild(style);
        })();
    </script>
}
