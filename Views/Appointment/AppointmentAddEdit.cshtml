@model HospitalManagementSystem.Models.AppointmentModel

<div class="col-lg-12">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-4">
            <h3 class="card-title mb-4 fw-semibold text-primary fs-3">
                @(Model?.AppointmentID == null || Model?.AppointmentID == 0 ? "📅 Add Appointment" : "📅 Save Appointment")
            </h3>


            <form asp-controller="Appointment"
                  asp-action="AppointmentAddEdit"
                  method="post"
                  class="row g-3 needs-validation"
                  novalidate>

                <input type="hidden" asp-for="AppointmentID" />

                <!-- Doctor Dropdown -->
                <div class="mb-3">
                    <label asp-for="DoctorID" class="form-label fw-medium">Doctor</label>
                    <select asp-for="DoctorID"
                            asp-items="ViewBag.DoctorList"
                            class="form-control rounded-pill shadow-sm"
                            required>
                        <option value="">-- Select Doctor --</option>
                    </select>
                    <div class="invalid-feedback">Please select a doctor.</div>
                </div>

                <!-- Patient Dropdown -->
                <div class="mb-3">
                    <label asp-for="PatientID" class="form-label fw-medium">Patient</label>
                    <select asp-for="PatientID"
                            asp-items="ViewBag.PatientList"
                            class="form-control rounded-pill shadow-sm"
                            required>
                        <option value="">-- Select Patient --</option>
                    </select>
                    <div class="invalid-feedback">Please select a patient.</div>
                </div>

                <!-- User Dropdown -->
                <div class="mb-3">
                    <label asp-for="UserID" class="form-label fw-medium">User</label>
                    <select asp-for="UserID"
                            asp-items="ViewBag.UserList"
                            class="form-control rounded-pill shadow-sm"
                            required>
                        <option value="">-- Select User --</option>
                    </select>
                    <div class="invalid-feedback">Please select a user.</div>
                </div>

                <!-- Appointment Date -->
                <div class="col-12">
                    <label asp-for="AppointmentDate" class="form-label fw-medium">Appointment Date</label>
                    <input asp-for="AppointmentDate"
                           type="datetime-local"
                           class="form-control rounded-pill shadow-sm"
                           required />
                    <div class="invalid-feedback">
                        Please select appointment date.
                    </div>
                </div>

                <!-- Appointment Status -->
                <div class="col-12">
                    <label asp-for="AppointmentStatus" class="form-label fw-medium">Status</label>
                    <select asp-for="AppointmentStatus"
                            class="form-select rounded-pill shadow-sm"
                            required>
                        <option value="">-- Select Status --</option>
                        <option value="Scheduled">Scheduled</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                    <div class="invalid-feedback">
                        Please select appointment status.
                    </div>
                </div>


                <!-- Description -->
                <div class="col-12">
                    <label asp-for="Description" class="form-label fw-medium">Description</label>
                    <input asp-for="Description"
                           type="text"
                           class="form-control rounded-pill shadow-sm"
                           placeholder="Enter description"
                           required />
                    <div class="invalid-feedback">
                        Please enter description.
                    </div>
                </div>

                <!-- Special Remarks -->
                <div class="col-12">
                    <label asp-for="SpecialRemarks" class="form-label fw-medium">Special Remarks</label>
                    <input asp-for="SpecialRemarks"
                           type="text"
                           class="form-control rounded-pill shadow-sm"
                           placeholder="Enter remarks"
                           required />
                    <div class="invalid-feedback">
                        Please enter special remarks.
                    </div>
                </div>

                <!-- Total Amount -->
                <div class="col-12">
                    <label asp-for="TotalConsultedAmount" class="form-label fw-medium">Total Amount</label>
                    <input asp-for="TotalConsultedAmount"
                           type="number"
                           step="0.01"
                           class="form-control rounded-pill shadow-sm"
                           placeholder="Enter amount"
                           required />
                    <div class="invalid-feedback">
                        Please enter a valid amount.
                    </div>
                </div>

                <!-- Hidden fields -->
                <input type="hidden" asp-for="Created" />
                <input type="hidden" asp-for="Modified" />

                <!-- Buttons -->
                <div class="col-12 text-center mt-3">
                    <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill shadow">Save</button>
                    <a asp-controller="Appointment" asp-action="AppointmentList" class="btn btn-outline-secondary px-4 py-2 rounded-pill ms-2">Back to list</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                const forms = document.getElementsByClassName('needs-validation');
                Array.prototype.forEach.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
