@model HospitalManagementSystem.Models.AppointmentModel

<div class="col-lg-12">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-4">
            <h3 class="card-title mb-4 fw-semibold text-primary fs-3">📅 Save Appointment</h3>

            <form asp-controller="Appointment"
                  asp-action="AppointmentAddEdit"
                  method="post"
                  class="row g-3 needs-validation"
                  novalidate>

                <input type="hidden" asp-for="AppointmentID" />

                <!-- Doctor -->
                <div class="col-12">
                    <label asp-for="DoctorID" class="form-label fw-medium">Doctor</label>
                    <input asp-for="DoctorID"
                           type="number"
                           class="form-control rounded-pill shadow-sm"
                           placeholder="Enter Doctor ID"
                           required />
                    <div class="invalid-feedback">
                        Please enter a valid Doctor ID.
                    </div>
                </div>

                <!-- Patient -->
                <div class="col-12">
                    <label asp-for="PatientID" class="form-label fw-medium">Patient</label>
                    <input asp-for="PatientID"
                           type="number"
                           class="form-control rounded-pill shadow-sm"
                           placeholder="Enter Patient ID"
                           required />
                    <div class="invalid-feedback">
                        Please enter a valid Patient ID.
                    </div>
                </div>

                <!-- Appointment Date -->
                <div class="col-12">
                    <label asp-for="AppointmentDate" class="form-label fw-medium">Appointment Date</label>
                    <input asp-for="AppointmentDate"
                           type="datetime-local"
                           class="form-control rounded-pill shadow-sm"
                           required />
                    <div class="invalid-feedback">
                        Please select appointment date.
                    </div>
                </div>

                <!-- Appointment Status -->
                <div class="col-12">
                    <label asp-for="AppointmentStatus" class="form-label fw-medium">Status</label>
                    <input asp-for="AppointmentStatus"
                           type="text"
                           class="form-control rounded-pill shadow-sm"
                           placeholder="Enter Status"
                           required />
                    <div class="invalid-feedback">
                        Please enter appointment status.
                    </div>
                </div>

                <!-- Description -->
                <div class="col-12">
                    <label asp-for="Description" class="form-label fw-medium">Description</label>
                    <input asp-for="Description"
                           type="text"
                           class="form-control rounded-pill shadow-sm"
                           placeholder="Enter description"
                           required />
                    <div class="invalid-feedback">
                        Please enter description.
                    </div>
                </div>

                <!-- Special Remarks -->
                <div class="col-12">
                    <label asp-for="SpecialRemarks" class="form-label fw-medium">Special Remarks</label>
                    <input asp-for="SpecialRemarks"
                           type="text"
                           class="form-control rounded-pill shadow-sm"
                           placeholder="Enter remarks"
                           required />
                    <div class="invalid-feedback">
                        Please enter special remarks.
                    </div>
                </div>

                <!-- Total Amount -->
                <div class="col-12">
                    <label asp-for="TotalConsultedAmount" class="form-label fw-medium">Total Amount</label>
                    <input asp-for="TotalConsultedAmount"
                           type="number"
                           step="0.01"
                           class="form-control rounded-pill shadow-sm"
                           placeholder="Enter amount"
                           required />
                    <div class="invalid-feedback">
                        Please enter a valid amount.
                    </div>
                </div>

                <!-- User ID -->
                <div class="col-12">
                    <label asp-for="UserID" class="form-label fw-medium">User ID</label>
                    <input asp-for="UserID"
                           type="number"
                           class="form-control rounded-pill shadow-sm"
                           required />
                    <div class="invalid-feedback">
                        Please enter a valid User ID.
                    </div>
                </div>

                <!-- Hidden fields -->
                <input type="hidden" asp-for="Created" />
                <input type="hidden" asp-for="Modified" />

                <!-- Buttons -->
                <div class="col-12 text-center mt-3">
                    <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill shadow">Save</button>
                    <button type="reset" class="btn btn-outline-secondary px-4 py-2 rounded-pill ms-2">Reset</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            'use strict';

            const forms = document.querySelectorAll('.needs-validation');

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    const inputs = form.querySelectorAll('input, textarea, select');

                    inputs.forEach(input => {
                        input.classList.remove('is-valid', 'is-invalid');
                        if (!input.checkValidity()) {
                            input.classList.add('is-invalid');
                        }
                    });

                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                }, false);
            });
        })();
    </script>
}
