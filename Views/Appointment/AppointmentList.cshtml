@model DataTable
@using System.Data

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4 fw-semibold text-primary fs-3">Appointment List</h5>

                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }



                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">AppointmentID</th>
                                    <th scope="col">DoctorName</th>
                                    <th scope="col">Specialization</th>
                                    <th scope="col">PatientID</th>
                                    <th scope="col">PatientName</th>
                                    <th scope="col">Gender</th>
                                    <th scope="col">AppointmentDate</th>
                                    <th scope="col">AppointmentStatus</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Special Remarks</th>
                                    <th scope="col">Created</th>
                                    <th scope="col">Modified</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow row in Model.Rows)
                                {
                                    <tr>
                                        <th>@row["AppointmentID"]</th>
                                        <td>@row["DoctorName"]</td>
                                        <td>@row["Specialization"]</td>
                                        <td>@row["PatientID"]</td>
                                        <td>@row["PatientName"]</td>
                                        <td>@row["Gender"]</td>
                                        <td>@row["AppointmentDate"]</td>
                                        <td>@row["AppointmentStatus"]</td>
                                        <td>@row["Description"]</td>
                                        <td>@row["SpecialRemarks"]</td>
                                        <td>@row["Created"]</td>
                                        <td>@row["Modified"]</td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a class="btn btn-outline-success btn-xs" asp-controller="Appointment" asp-action="AppointmentFormFill" asp-route-ID="@row["AppointmentID"]">
                                                    <i class="bi bi-pencil-fill"></i>
                                                </a>

                                                <a asp-controller="Appointment" asp-action="AppointmentDelete" asp-route-AppointmentID="@row["AppointmentID"]" class="btn btn-outline-danger btn-xs">
                                                    <i class="bi bi-x"></i>
                                                </a>
                                            </div>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>


                </div>
            </div>

        </div>
    </div>
</section>
