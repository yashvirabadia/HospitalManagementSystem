@model HospitalManagementSystem.Models.DoctorDepartmentModel

<div class="col-lg-12">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-4">
            <h3 class="card-title mb-4 fw-semibold text-primary fs-3">🏥 Assign Doctor to Department</h3>

            <form asp-action="DoctorDepartmentAddEdit" method="post" class="needs-validation" novalidate>

                <input type="hidden" asp-for="DoctorDepartmentID" />

                <!-- Doctor ID -->
                <div class="mb-3">
                    <label asp-for="DoctorID" class="form-label fw-medium">Doctor ID</label>
                    <input asp-for="DoctorID" type="number" class="form-control rounded-pill shadow-sm" placeholder="Enter Doctor ID" required />
                    <div class="invalid-feedback">Please enter a valid Doctor ID.</div>
                    @* <span asp-validation-for="DoctorID" class="text-danger small"></span> *@
                </div>

                <!-- Department ID -->
                <div class="mb-3">
                    <label asp-for="DepartmentID" class="form-label fw-medium">Department ID</label>
                    <input asp-for="DepartmentID" type="number" class="form-control rounded-pill shadow-sm" placeholder="Enter Department ID" required />
                    <div class="invalid-feedback">Please enter a valid Department ID.</div>
                    @* <span asp-validation-for="DepartmentID" class="text-danger small"></span> *@
                </div>

                <!-- User ID -->
                <div class="mb-3">
                    <label asp-for="UserID" class="form-label fw-medium">User ID</label>
                    <input asp-for="UserID" type="number" class="form-control rounded-pill shadow-sm" placeholder="Enter User ID" required />
                    <div class="invalid-feedback">Please enter a valid User ID.</div>
                    @* <span asp-validation-for="UserID" class="text-danger small"></span> *@
                </div>

                <!-- Submit + Reset -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill shadow">Save</button>
                    <button type="reset" class="btn btn-outline-secondary px-4 py-2 rounded-pill ms-2">Reset</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap validation: only red border for invalid, no green border for valid
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            // Remove green "is-valid" class if Bootstrap tries to add it
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('input', () => {
                    input.classList.remove('is-valid');
                });
            });
        })();
    </script>
}
