@model HospitalManagementSystem.Models.DoctorDepartmentModel

<div class="col-lg-12">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-4">
            <h3 class="card-title mb-4 fw-semibold text-primary fs-3">
                @(Model?.DoctorDepartmentID == null || Model?.DoctorDepartmentID == 0 ? "🏥 Add Doctor-Department" : "🏥 Save Doctor-Department")
            </h3>

            <form asp-action="DoctorDepartmentAddEdit" method="post" class="needs-validation" novalidate>

                <input type="hidden" asp-for="DoctorDepartmentID" />

                <!-- Doctor Dropdown -->
                <div class="mb-3">
                    <label asp-for="DoctorID" class="form-label fw-medium">Doctor</label>
                    <select asp-for="DoctorID"
                            asp-items="ViewBag.DoctorList"
                            class="form-control rounded-pill shadow-sm"
                            required>
                        <option value="">-- Select Doctor --</option>
                    </select>
                    <div class="invalid-feedback">Please select a doctor.</div>
                </div>

                <!-- Department Dropdown -->
                <div class="mb-3">
                    <label asp-for="DepartmentID" class="form-label fw-medium">Department</label>
                    <select asp-for="DepartmentID"
                            asp-items="ViewBag.DepartmentList"
                            class="form-control rounded-pill shadow-sm"
                            required>
                        <option value="">-- Select Department --</option>
                    </select>
                    <div class="invalid-feedback">Please select a department.</div>
                </div>

                <!-- User Dropdown -->
                <div class="mb-3">
                    <label asp-for="UserID" class="form-label fw-medium">User</label>
                    <select asp-for="UserID"
                            asp-items="ViewBag.UserList"
                            class="form-control rounded-pill shadow-sm"
                            required>
                        <option value="">-- Select User --</option>
                    </select>
                    <div class="invalid-feedback">Please select a user.</div>
                </div>


                <!-- Buttons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill shadow">Save</button>
                    <a asp-controller="DoctorDepartment" asp-action="DoctorDepartmentList" class="btn btn-outline-secondary px-4 py-2 rounded-pill ms-2">Back to list</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                const forms = document.getElementsByClassName('needs-validation');
                Array.prototype.forEach.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}