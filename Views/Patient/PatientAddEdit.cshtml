@model HospitalManagementSystem.Models.PatientModel

<div class="col-lg-auto">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-4">
            <h3 class="card-title mb-4 fw-semibold text-primary fs-3">
                @(Model?.PatientID == null || Model?.PatientID == 0 ? "👩‍⚕️ Add Patient" : "👩‍⚕️ Save PatientID")
            </h3>

            <form asp-controller="Patient" asp-action="PatientAddEdit" method="post" class="needs-validation" novalidate>

                <input type="hidden" asp-for="PatientID" />

                <!-- Name -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-medium">Name</label>
                    <input asp-for="Name" class="form-control rounded-pill shadow-sm" placeholder="Enter full name" required />
                    <div class="invalid-feedback">Please enter full name.</div>
                </div>

                <!-- Date of Birth -->
                <div class="mb-3">
                    <label asp-for="DateOfBirth" class="form-label fw-medium">Date of Birth</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control rounded-pill shadow-sm" required />
                    <div class="invalid-feedback">Please select date of birth.</div>
                </div>

                <!-- Gender -->
                <div class="mb-3">
                    <label asp-for="Gender" class="form-label fw-medium">Gender</label>
                    <select asp-for="Gender" class="form-select rounded-pill shadow-sm" required>
                        <option value="">-- Select Gender --</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                    <div class="invalid-feedback">Please select gender.</div>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-medium">Email</label>
                    <input asp-for="Email" type="email" class="form-control rounded-pill shadow-sm" placeholder="Enter email address" required />
                    <div class="invalid-feedback">Please enter a valid email.</div>
                </div>

                <!-- Phone -->
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-medium">Phone</label>
                    <input asp-for="Phone" type="tel" class="form-control rounded-pill shadow-sm" placeholder="Enter phone number" required />
                    <div class="invalid-feedback">Please enter phone number.</div>
                </div>

                <!-- Address -->
                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-medium">Address</label>
                    <input asp-for="Address" class="form-control rounded-pill shadow-sm" placeholder="Street, Locality..." required />
                    <div class="invalid-feedback">Please enter address.</div>
                </div>

                <!-- City -->
                <div class="mb-3">
                    <label asp-for="City" class="form-label fw-medium">City</label>
                    <input asp-for="City" class="form-control rounded-pill shadow-sm" required />
                    <div class="invalid-feedback">Please enter city.</div>
                </div>

                <!-- State -->
                <div class="mb-3">
                    <label asp-for="State" class="form-label fw-medium">State</label>
                    <input asp-for="State" class="form-control rounded-pill shadow-sm" required />
                    <div class="invalid-feedback">Please enter state.</div>
                </div>

                <!-- Is Active -->
                <div class="mb-3">
                    <label class="form-label fw-medium d-block mb-1" for="IsActiveSwitch">Is Active</label>
                    <div class="form-check form-switch">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" checked />
                    </div>
                </div>

                <!-- Hidden Fields -->
                <input type="hidden" asp-for="Created" />
                <input type="hidden" asp-for="Modified" />

                <!-- User ID -->
                <div class="mb-3">
                    <label asp-for="UserID" class="form-label fw-medium">User ID</label>
                    <input asp-for="UserID" type="number" class="form-control rounded-pill shadow-sm" placeholder="Enter User ID" required />
                    <div class="invalid-feedback">Please enter user ID.</div>
                </div>

                <!-- Buttons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill shadow">Save</button>
                    <a asp-controller="Patient" asp-action="PatientList" class="btn btn-outline-secondary px-4 py-2 rounded-pill ms-2">Back to list</a>
                </div>
            </form>
        </div>
    </div>
</div>

